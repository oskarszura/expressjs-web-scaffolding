<% include header %>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>My Welcome</h1>
            <p>Welcome</p>
        </div>
    </div>
    <%if(error) { %>
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger" role="alert">
                User or password not found.
            </div>
        </div>
    </div>
    <% } %>
    <div class="row">
        <div class="col-sm-12">
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email"
                           class="form-control"
                           id="exampleInputEmail1"
                           placeholder="Email"
                           name="username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password"
                           class="form-control"
                           id="exampleInputPassword1"
                           placeholder="Password"
                           name="password">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <p>
                <em><a href="/login/register">Register an user</a></em>
            </p>

        </div>
    </div>
</div>

<% include footer %>